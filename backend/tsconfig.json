{
  "compilerOptions": {
    /* Ambiente */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "Node",

    /* Paths */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Qualidade */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,

    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Build */
    "skipLibCheck": true,
    "sourceMap": true,

    /* DX */
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
